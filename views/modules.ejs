<!doctype html>
<html>

  <head>
    <title><%= name %> Modules</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  </head>

  <body>

    <a href="/">Home</a>

    <h1>Modules in <%= name %></h1>

    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">

        <!-- show any messages that come back after action -->
        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <div id="googleMap" style="width:500px;height:380px;"></div>

        <a href="/admin/languages/<%= name %>/modules/create">Add New Module</a>

        <table>
          <thead>
            <tr>
              <th>Reading Modules</th>
              <th>Numbers Modules</th>
            </tr>
          </thead>
          <tbody>

            <% for ( var i = 0; i < Math.min(reading.length, numbers.length); i++ ) { %>
                <tr>
                  <td>
                    <a><%= reading[ i ] %></a>
                  </td>
                  <td>
                    <a><%= numbers[ i ] %></a>
                  </td>
                </tr>
            <% } %>

            <% for ( var j = i; j < Math.max(reading.length, numbers.length); j++ ) { %>
                <tr>
                  <td>
                    <% if (reading[j]) { %>
                      <a><%= reading[j] %></a>
                    <% } %>
                  </td>
                  <td>
                    <% if (numbers[j]) { %>
                      <a><%= numbers[j] %></a>
                    <% } %>
                 </td>
                </tr>
            <% } %>

          </tbody>
        </table>
      </div>
    </div>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script>var dataMap</script>
    <% if (map) { %>
      <script>dataMap = '<%= map %>'</script>
    <% } %>
    <script src="/javascripts/map-helper.js"></script>
    <!-- GOOGLE MAP LIBRARY -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDF4lZ1KiV2-dLwV3V32dfG5nA9alMaCfk&libraries=geometry&callback=initMap" async defer></script>

  </body>
</html>